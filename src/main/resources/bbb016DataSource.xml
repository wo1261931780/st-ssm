<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!--我们刚刚引入了德鲁伊的pom依赖-->
	<!--这里对依赖进行配置-->
	<bean id="xmlDataSource" class="com.alibaba.druid.pool.DruidDataSource">
		<!--我们可以把这里的properties理解为对象中的属性-->
		<property name="driverClassName" value="com.mysql.jdbc.Driver"/>
		<!--类似于set和list中的对象属性-->
		<!--有多少，设置多少个就可以了-->
		<property name="url" value="jdbc:mysql://localhost:3306/study002jdbc"/>
		<property name="username" value="root"/>
		<property name="password" value="junw555"/>
	</bean>
	<!--配置数据库连接池，都是固定的格式-->
	<bean id="xmlDataSourcePool" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<!--因为无法使用setter注入，这里使用构造器注入-->
		<property name="driverClass" value="com.mysql.jdbc.Driver"/>
		<property name="password" value="junw555"/>
		<property name="user" value="root"/>
		<property name="jdbcUrl" value="jdbc:mysql://localhost:3306/study002jdbc"/>
	</bean>
</beans>
